@{
    Layout = "_Layout";
}

<body>
    <header>
        <h1>Vendors</h1>
        <ul class="nav">
            <li><a href='/'>Home</a></li>
            <li><a href='/vendors/new'>Add Vendor</a></li>
        </ul>
    </header>
    <main>
        @using VendorOrderTracker.Models;
        @if (@Model.Count == 0)
        {
            <p>You have no vendors yet.</p>
        }
        
        <ul class="list-view data-2">
            @if (@Model.Count != 0)
            {
                <li class="header-row"><span>Name</span><span>Description</span></li>
            }
            @foreach (Vendor vendor in @Model)
            {
                <li><a href='/vendors/@vendor.Name/orders'>
                    <span>@vendor.Name</span>
                    <span>@vendor.Description</span>
                </a></li>
            }
        </ul>
    </main>
</body>